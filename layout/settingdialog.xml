<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color1">

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/key"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Permission"
            android:textColor="@color/colorWhite"
            android:textSize="20dp"
            android:layout_marginLeft="15dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please enter password to continue"
        android:textColor="@color/colorWhite"
        android:textSize="16dp"
        android:layout_marginLeft="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="@color/color7"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/settingPasswordET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/color7"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:textColor="@color/colorWhite"
        android:inputType="textPassword"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="79dp">
            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/settingDialogNoBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/alert_dialog_button"
                app:srcCompat="@drawable/ic_false"
                android:text="No"/>

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/settingDialogYesBtn"
                android:layout_width="wrap_content"
                app:srcCompat="@drawable/ic_true"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/alert_dialog_button"
                android:text="Yes"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>