<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <TextView
            android:id="@+id/no"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/date"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/label_no"
            android:layout_toRightOf="@+id/no"
            android:layout_toLeftOf="@+id/bin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/reject_code"
            android:layout_below="@+id/label_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/bin"
            android:layout_alignParentRight="true"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:textColor="#ffffff"/>

        <LinearLayout
            android:id="@+id/h_r_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label_no"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="200">

            <LinearLayout
                style="@style/custom_block_style"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:orientation="vertical">

                <TextView
                    style="@style/custom_label_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/pv_no" />

                <TextView
                    android:id="@+id/pv_no"
                    style="@style/custom_value_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#ababab"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                style="@style/custom_block_style"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:orientation="vertical">

                <TextView
                    style="@style/custom_label_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lc1"
                    android:textAlignment="textStart" />

                <TextView
                    android:id="@+id/lc"
                    style="@style/custom_value_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textAlignment="textStart" />
            </LinearLayout>

            <LinearLayout
                style="@style/custom_block_style"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:orientation="vertical">

                <TextView
                    style="@style/custom_label_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/h" />

                <TextView
                    android:id="@+id/h"
                    style="@style/custom_value_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                style="@style/custom_block_style"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:orientation="vertical">

                <TextView
                    style="@style/custom_label_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/negative_d1" />

                <TextView
                    android:id="@+id/d"
                    style="@style/custom_value_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/d_lc_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/h_r_layout"
            android:orientation="horizontal"
            android:weightSum="200">

            <LinearLayout
                style="@style/custom_block_style"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:orientation="vertical">

                <TextView
                    style="@style/custom_label_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/r"
                    android:textAlignment="textStart" />

                <TextView
                    android:id="@+id/r"
                    style="@style/custom_value_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textAlignment="textStart" />
            </LinearLayout>

            <LinearLayout
                style="@style/custom_block_style"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:orientation="vertical">

                <TextView
                    style="@style/custom_label_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/kap_reg_no" />

                <TextView
                    android:id="@+id/kap_reg_no"
                    style="@style/custom_value_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                style="@style/custom_block_style"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:orientation="vertical">

                <TextView
                    style="@style/custom_label_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/comments" />

                <TextView
                    android:id="@+id/comment"
                    style="@style/custom_value_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/more_label_detail"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:background="@drawable/custom_more_label_detail"
                android:foreground="?android:attr/selectableItemBackground"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="14dp"
                    android:text="@string/more"
                    android:textAlignment="gravity"
                    android:textColor="@color/colorWhite"
                    android:textSize="15dp" />
            </LinearLayout>
        </LinearLayout>


        <ImageView
            android:id="@+id/bin"
            android:layout_marginLeft="10dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_alignParentTop="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_bin"/>
    </RelativeLayout>

</RelativeLayout>