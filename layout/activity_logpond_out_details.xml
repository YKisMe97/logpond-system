<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.mydreamsoft.logpond.activity.MainActivity">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.design.widget.AppBarLayout
                android:id="@+id/toolbar_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme.AppBarOverlay">
                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    app:contentInsetLeft="0dp"
                    app:contentInsetStart="0dp"
                    app:contentInsetStartWithNavigation="0dp"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@color/colorPrimary"
                    app:popupTheme="@style/AppTheme.PopupOverlay" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/logpond_out"
                            android:textColor="@color/subtitle"
                            android:textSize="18dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true" />

                        <TextView
                            android:id="@+id/logpond_out_detail_subtitle"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="5dp"
                            android:textSize="13dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:textColor="@color/subtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/logpond_out_detail_toolbar_entry_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="10dp"
                            android:textColor="@color/subtitle"
                            android:textSize="13dp"
                            android:visibility="gone" />

                    </RelativeLayout>

                </android.support.v7.widget.Toolbar>
            </android.support.design.widget.AppBarLayout>

            <ScrollView
                android:layout_below="@id/toolbar_view"
                android:layout_above="@+id/next_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:isScrollContainer="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Entry No"
                                android:textColor="@color/label"
                                android:layout_alignParentTop="true" />

                            <EditText
                                android:id="@+id/entry_no"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:hint="@string/entry_no"
                                android:singleLine="true"
                                android:maxLines="1" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Date"
                                android:textColor="@color/label"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentTop="true"
                                android:layout_marginLeft="30dp"/>


                            <EditText
                                android:id="@+id/date"
                                android:textAlignment="textEnd"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/date"
                                android:singleLine="true"
                                android:maxLines="1"
                                android:drawableLeft="@drawable/calendar"/>

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/row1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/row_action"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_weight="1"
                            android:background="@drawable/forest_entry_border"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="@string/action"
                                android:textSize="9sp"
                                android:textStyle="bold" />

                            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                                android:id="@+id/action_spinner"
                                style="@style/spinnerwithnoarrow"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textAlignment="gravity" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/row2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/spare1"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_weight="1"
                            android:background="@drawable/forest_entry_border"
                            android:orientation="vertical"
                            android:visibility="gone">

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/container_layout"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_weight="1"
                            android:background="@drawable/forest_entry_border"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <!--com.toptoche.searchablespinnerlibrary.SearchableSpinner
                                android:id="@+id/sawmill_no_spinner"
                                style="@style/spinnerwithnoarrow"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textAlignment="gravity" /-->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="@string/container_no"
                                android:textSize="9sp"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/container_no"
                                android:singleLine="true"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="clip_vertical"
                                android:background="@null"
                                android:gravity="center_vertical"
                                android:textAlignment="gravity"
                                android:textCursorDrawable="@null"
                                android:textSize="20sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/barging_layout"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_weight="0.4"
                            android:background="@drawable/forest_entry_border"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="@string/barging"
                                android:textSize="9sp"
                                android:textStyle="bold" />

                            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                                android:id="@+id/barge_no_spinner"
                                style="@style/spinnerwithnoarrow"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textAlignment="gravity" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/vvb_layout"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_weight="1"
                            android:background="@drawable/forest_entry_border"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="@string/vvb_no"
                                android:textSize="9sp"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/vvb_no"
                                android:singleLine="true"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:background="@null"
                                android:gravity="center_vertical"
                                android:textAlignment="gravity"
                                android:textCursorDrawable="@null"
                                android:textSize="20sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/hatch_layout"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_weight="1"
                            android:background="@drawable/forest_entry_border"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="@string/hatch_no"
                                android:textSize="9sp"
                                android:textStyle="bold" />


                            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                                android:id="@+id/hatch_no_spinner"
                                style="@style/spinnerwithnoarrow"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textAlignment="gravity" />

                        </LinearLayout>

                    </LinearLayout>

                <LinearLayout
                    android:id="@+id/driver_layout"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_weight="1"
                        android:background="@drawable/forest_entry_border"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="80dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textStyle="bold"
                            android:textSize="9sp"
                            android:text="@string/driver_name"/>

                        <EditText
                            android:id="@+id/driver_name"
                            android:singleLine="true"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:layout_gravity="center_vertical"
                            android:textSize="20sp"
                            android:textAlignment="gravity"
                            android:background="@null"
                            android:textCursorDrawable="@null"
                            android:paddingLeft="5dp"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:background="@drawable/forest_entry_border"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="80dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textStyle="bold"
                            android:textSize="9sp"
                            android:text="@string/plate_no"/>

                        <EditText
                            android:id="@+id/plate_no"
                            android:singleLine="true"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:layout_gravity="center_vertical"
                            android:textSize="20sp"
                            android:textAlignment="gravity"
                            android:background="@null"
                            android:textCursorDrawable="@null"
                            />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/logpond_layout"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_weight="1"
                        android:background="@drawable/forest_entry_border"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="80dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textStyle="bold"
                            android:textSize="9sp"
                            android:text="@string/from_logpond"/>
                        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                            android:id="@+id/from_logpond_spinner"
                            android:textAlignment="gravity"
                            style="@style/spinnerwithnoarrow"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:background="@drawable/forest_entry_border"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="80dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textStyle="bold"
                            android:textSize="9sp"
                            android:text="@string/to_logpond"/>

                        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                            android:id="@+id/to_logpond_spinner"
                            android:textAlignment="gravity"
                            style="@style/spinnerwithnoarrow"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/pile_Layout"
                        android:visibility="gone"
                        android:layout_weight="1"
                        android:background="@drawable/forest_entry_border"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="80dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textStyle="bold"
                            android:textSize="9sp"
                            android:text="@string/pile1"/>
                        <EditText
                            android:id="@+id/pile"
                            android:singleLine="true"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:layout_gravity="center_vertical"
                            android:textSize="20sp"
                            android:textAlignment="gravity"
                            android:background="@null"
                            android:textCursorDrawable="@null"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/vessel_layout"
                        android:layout_weight="0.4"
                        android:background="@drawable/forest_entry_border"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="80dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textStyle="bold"
                            android:textSize="9sp"
                            android:text="@string/vessel_no"/>
                        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                            android:id="@+id/vessel_no_spinner"
                            android:textAlignment="gravity"
                            style="@style/spinnerwithnoarrow"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/mother_hatch_layout"
                        android:visibility="gone"
                        android:layout_weight="1"
                        android:background="@drawable/forest_entry_border"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="80dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textStyle="bold"
                            android:textSize="9sp"
                            android:text="@string/mother_hatch"/>

                        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                            android:id="@+id/mother_hatch_spinner"
                            android:textAlignment="gravity"
                            style="@style/spinnerwithnoarrow"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/seal_layout"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:background="@drawable/forest_entry_border"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="80dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textStyle="bold"
                            android:textSize="9sp"
                            android:text="@string/serial_no"/>

                        <EditText
                            android:id="@+id/serial_no"
                            android:singleLine="true"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:layout_gravity="center_vertical"
                            android:textSize="20sp"
                            android:textAlignment="gravity"
                            android:background="@null"
                            android:textCursorDrawable="@null"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/customer_layout1"
                        android:visibility="gone"
                        android:layout_weight="1"
                        android:background="@drawable/forest_entry_border"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="80dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textStyle="bold"
                            android:textSize="9sp"
                            android:text="@string/sawmill"/>

                        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                            android:id="@+id/sawmill_spinner"
                            android:textAlignment="gravity"
                            style="@style/spinnerwithnoarrow"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/camp_use_layout"
                        android:visibility="gone"
                        android:layout_weight="1"
                        android:background="@drawable/forest_entry_border"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="80dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textStyle="bold"
                            android:textSize="9sp"
                            android:text="@string/camp_use"/>

                        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                            android:id="@+id/camp_use_spinner"
                            android:textAlignment="gravity"
                            style="@style/spinnerwithnoarrow"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                    </LinearLayout>


                </LinearLayout>
                    <LinearLayout
                        android:id="@+id/customer_layout"
                        android:visibility="gone"
                        android:background="@drawable/forest_entry_border"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="80dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textStyle="bold"
                            android:textSize="9sp"
                            android:text="@string/customer"/>

                        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                            android:id="@+id/customer_spinner"
                            android:textAlignment="gravity"
                            style="@style/spinnerwithnoarrow"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/operator_Layout"
                        android:visibility="gone"
                        android:background="@drawable/forest_entry_border"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="80dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textStyle="bold"
                            android:textSize="9sp"
                            android:text="@string/operator"/>

                        <EditText
                            android:id="@+id/operator_editText"
                            android:singleLine="true"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:textSize="18sp"
                            android:textAlignment="gravity"
                            android:background="@null"
                            android:textCursorDrawable="@null"
                            android:layout_marginLeft="6dp"
                            />

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

            <RelativeLayout
                style="@style/custom_save_button_color"
                android:id="@+id/next_layout"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:padding="20dp">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="5dp"
                        app:srcCompat="@drawable/white_next_image"
                        android:layout_toRightOf="@id/next_button"/>

                    <TextView
                        android:id="@+id/next_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:textAllCaps="true"
                        android:text="@string/next"/>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </android.support.constraint.ConstraintLayout>

</android.support.v4.widget.DrawerLayout>

